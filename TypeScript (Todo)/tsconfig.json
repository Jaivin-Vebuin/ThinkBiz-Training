{
    "compilerOptions": {
      "target": "es2016",          // or "es6"
      "lib": ["es2016", "dom"],
      "module": "es6",             // Use ES modules
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"           // Output directory for compiled JS files
    },
    "include": ["./*.ts"],
    "exclude": ["node_modules"]
  }
  